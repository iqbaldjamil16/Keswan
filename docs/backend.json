
{
  "entities": {
    "CaseDevelopmentEntry": {
      "title": "CaseDevelopmentEntry",
      "description": "Represents an entry for case development.",
      "type": "object",
      "properties": {
        "status": { "type": "string" },
        "count": { "type": "number" }
      },
      "required": ["status", "count"]
    },
    "VaccinationEntry": {
      "title": "VaccinationEntry",
      "description": "Represents a single vaccination event.",
      "type": "object",
      "properties": {
        "jenisVaksin": { "type": "string" },
        "jenisTernak": { "type": "string" },
        "jumlahTernak": { "type": "number" }
      },
      "required": ["jenisVaksin", "jenisTernak", "jumlahTernak"]
    },
    "HealthcareService": {
      "title": "HealthcareService",
      "description": "Represents a healthcare service record for livestock.",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "puskeswan": { "type": "string" },
        "officerName": { "type": "string" },
        "ownerName": { "type": "string" },
        "ownerAddress": { "type": "string" },
        "livestockCount": { "type": "number" },
        "vaccinations": {
          "type": "array",
          "items": { "$ref": "#/entities/VaccinationEntry" }
        },
        "caseDevelopments": {
          "type": "array",
          "items": { "$ref": "#/entities/CaseDevelopmentEntry" }
        },
        "nik": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "programVaksinasi": {
          "type": "string"
        }
      },
      "required": [
        "date",
        "puskeswan",
        "officerName",
        "ownerName",
        "ownerAddress",
        "programVaksinasi",
        "vaccinations"
      ]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/healthcareServices/{serviceId}": {
      "schema": { "$ref": "#/entities/HealthcareService" },
      "description": "Stores all healthcare service records."
    }
  }
}
