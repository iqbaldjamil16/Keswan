
{
  "entities": {
    "HealthcareService": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "HealthcareService",
      "type": "object",
      "description": "Represents a healthcare service record for livestock.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Healthcare Service record."
        },
        "date": {
          "type": "string",
          "description": "Date when the service was provided.",
          "format": "date-time"
        },
        "puskeswan": {
          "type": "string",
          "description": "The name of the Puskeswan."
        },
        "officerName": {
          "type": "string",
          "description": "Name of the officer who provided the service."
        },
        "ownerName": {
          "type": "string",
          "description": "Name of the livestock owner."
        },
        "ownerAddress": {
          "type": "string",
          "description": "Address of the livestock owner."
        },
        "caseId": {
          "type": "string",
          "description": "ID Kasus iSIKHNAS (Indonesian Animal Health Information System)."
        },
        "livestockType": {
          "type": "string",
          "description": "Type of livestock."
        },
        "livestockCount": {
          "type": "number",
          "description": "Number of livestock affected."
        },
        "clinicalSymptoms": {
          "type": "string",
          "description": "Observed clinical symptoms."
        },
        "diagnosis": {
          "type": "string",
          "description": "Diagnosis of the livestock condition."
        },
        "treatmentType": {
          "type": "string",
          "description": "Type of treatment provided."
        },
        "treatments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "medicineType": {
                "type": "string"
              },
              "medicineName": {
                "type": "string"
              },
              "dosage": {
                "type": "string"
              }
            },
            "required": [
              "medicineType",
              "medicineName",
              "dosage"
            ]
          }
        }
      },
      "required": [
        "date",
        "puskeswan",
        "officerName",
        "ownerName",
        "ownerAddress",
        "livestockType",
        "livestockCount",
        "clinicalSymptoms",
        "diagnosis",
        "treatmentType",
        "treatments"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "collections": {
      "/healthcareServices/{serviceId}": {
        "schema": {
          "$ref": "#/backend/entities/HealthcareService"
        },
        "description": "Stores all healthcare service records. Publicly readable and writable for this simple application."
      }
    }
  }
}

    