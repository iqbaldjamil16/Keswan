{
  "entities": {
    "Treatment": {
      "title": "Treatment",
      "description": "Represents a single treatment administered.",
      "type": "object",
      "properties": {
        "medicineType": { "type": "string" },
        "medicineName": { "type": "string" },
        "dosageValue": { "type": "number" },
        "dosageUnit": { "type": "string" }
      },
      "required": ["medicineType", "medicineName", "dosageValue", "dosageUnit"]
    },
    "CaseDevelopmentEntry": {
      "title": "CaseDevelopmentEntry",
      "description": "Represents an entry for case development.",
      "type": "object",
      "properties": {
        "status": { "type": "string" },
        "count": { "type": "number" }
      },
      "required": ["status", "count"]
    },
    "HealthcareService": {
      "title": "HealthcareService",
      "description": "Represents a healthcare service record for livestock.",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "puskeswan": { "type": "string" },
        "officerName": { "type": "string" },
        "ownerName": { "type": "string" },
        "ownerAddress": { "type": "string" },
        "caseId": { "type": "string" },
        "livestockType": { "type": "string" },
        "livestockCount": { "type": "number" },
        "clinicalSymptoms": { "type": "string" },
        "diagnosis": { "type": "string" },
        "treatmentType": { "type": "string" },
        "treatments": {
          "type": "array",
          "items": { "$ref": "#/entities/Treatment" }
        },
        "caseDevelopments": {
          "type": "array",
          "items": { "$ref": "#/entities/CaseDevelopmentEntry" }
        }
      },
      "required": [
        "date",
        "puskeswan",
        "officerName",
        "ownerName",
        "ownerAddress",
        "livestockType",
        "livestockCount",
        "clinicalSymptoms",
        "diagnosis",
        "treatmentType",
        "treatments"
      ]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/healthcareServices/{serviceId}": {
      "schema": { "$ref": "#/entities/HealthcareService" },
      "description": "Stores all healthcare service records."
    }
  }
}